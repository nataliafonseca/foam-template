{
  // See http://go.microsoft.com/fwlink/?LinkId=827846
  // for the documentation about the extensions.json format
  "recommendations": [
    // Foam's own extension
    "foam.foam-vscode",

    // Tons of markdown goodies (lists, tables of content, so much more)
    "yzhang.markdown-all-in-one",

    // Image-pasting for markdown
    "telesoho.vscode-markdown-paste-image",

    // Spell checker
    "streetsidesoftware.code-spell-checker",
    "streetsidesoftware.code-spell-checker-portuguese",
    "streetsidesoftware.code-spell-checker-portuguese-brazilian",

    // Emoji
    "bierner.emojisense",
    "bierner.markdown-emoji",

    // TODO highlighter (for highlighting TODO and some other words on comments, doesn't affect todo lists)
    "jgclark.vscode-todo-highlight",

    // Excalidraw (save file as .excalidraw, .excalidraw.json or .excalidraw.png or .excalidraw.sgv)
    "pomdtr.excalidraw-editor",

    // Mermaid
    "bierner.markdown-mermaid",
    "bpruitt-goddard.mermaid-markdown-syntax-highlighting",

    // Footnotes
    "bierner.markdown-footnotes",

    // GitDoc (Automatic commits)
    "vsls-contrib.gitdoc"
  ]
}
